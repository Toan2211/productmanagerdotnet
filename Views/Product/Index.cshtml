@model List<Product>;
@{

    ViewData["Title"] = "Product Manage Page";
    var products = Model;
}

<div class="text-center">
    <h1 class = "display-4">Welcome to Product Manager</h1>
    <table class="table table-striped table-hover">
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Qunaity</th>
            <th>Options</th>
            <th>
                <a href = "/Product/Create" class="btn btn-primary">Create</a>
            </th>

        </thead>
        <tbody>
            @foreach (var item in products)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>Xanh</td>
                <th>
                    <a href = "/Product/Update?ID=@item.ID" class="btn btn-success">Update</a>
                    <a href = "/Product/Delete?ID=@item.ID" class="btn btn-danger">Delete</a>
                </th>   
            </tr>             
            }

        </tbody>
    </table>
</div>
